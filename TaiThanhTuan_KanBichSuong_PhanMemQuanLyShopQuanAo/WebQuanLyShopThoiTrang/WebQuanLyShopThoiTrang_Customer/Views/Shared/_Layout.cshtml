                                <img src="~/images/bg4.jpg" class="d-block" alt="Ảnh 4" style="height: 600px; width: 1590px" />
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/bg5.jpg" class="d-block" alt="Ảnh 5" style="height: 600px; width: 1590px" />
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/bg6.jpg" class="d-block" alt="Ảnh 6" style="height: 600px; width: 1590px" />
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/bg7.jpg" class="d-block" alt="Ảnh 7" style="height: 600px; width: 1590px" />
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/bg8.jpg" class="d-block" alt="Ảnh 8" style="height: 600px; width: 1590px" />
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </div>
                    <div class="row" style="width:100%">
                        <div class="col">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
