@{
    ViewBag.Title = "Layout";
}
@using WebQuanLyShopThoiTrang_Customer.Controllers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/ionicons@5.2.3/dist/ionicons.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.8.3.min.js"></script>
    <script src="https://kit.fontawesome.com/218edafa57.js" crossorigin="anonymous"></script>
    <script type="text/javascript" src="JS/slider.js"></script>
    <style>
        [class*='table-hover']:hover {
            background-color: steelblue;
        }   

        .all {
            color: #000;
            font-size: 15px
        }

        .footer {
            margin-top: 30px;
            padding-left: 15px;
            clear: both;
        }

            .footer table tr td {
                padding-right: 50px;
                padding-left: 25px;
                color: blue;
            }

            .footer table p {
                font-size: 12px;
            }

            .footer table input {
                height: 25px;
            }

        .address {
            text-align: center;
            font-size: 12px;
            color: blue;
        }

        h3 {
            font-size: 1.25em;
        }

        .showBtn:hover {
            background-color: skyblue;
        }

        #fixHead {
            position: fixed;
            z-index: 999;
            background: #fff;
            left: 0;
            top: 0
        }
    </style>
</head>
<body>
    <div class="container-fluid all">
        <div class="row">
            <div class="container-fluid text-center " id="fixHead">
                <div class="row d-block bg-secondary text-light" style="text-anchor:middle;height:27px;font-size:12px">
                    <div class="row ">
                        <div class="col-10 mt-1" style="font-family: Tahoma; font-size: 12px; text-align: center">
                            <p class="ml-5  my-auto">Hotline Mua Hàng: 0973 285 886 | Hotline CSKH: 1900 886 803 - Ext 1 | Email CSKH: web@360boutique.vn </p>
                        </div>
                        <div class="col mt-1">
                            <a>
                                @Html.ActionLink("Đăng Ký ", "DangKy", "NguoiDung", new { @style = "color:#fff", @class = "showBtn" }) |
                            </a>
                            <a>
                                @Html.ActionLink("Đăng Nhập ", "DangNhap", "NguoiDung", new { @style = "color:#fff", @class = "showBtn" })
                            </a>
                        </div>
                    </div>
                </div>
                @*Header*@
                @*<div class="col-3 float-right" style="margin-top:48px">
                    @Html.Action("GioHangPartial", "GioHang")
                </div>*@
                <div class="row bg-info text-light" style="font-family:Tahoma; text-align:center; height:44px">
                    <ul class="col-md-5 nav nav-pills my-auto" style="font-size:12px">
                        <li class="nav-item nav-link text-light table-hover col">
                            @Html.ActionLink("TRANG CHỦ", "GETAllLoaiSP", "DanhMucSP", new { @class = "all", @style = "color:#fff" })
                        </li>
                        <li class="nav-item nav-link text-light table-hover col">
                            @*@Html.ActionLink("GIÀY NAM", "DanhMucPartial_TungLoai", "DanhMuc", new { @class = "all" })*@
                            CỬA HÀNG <i class="fas fa-angle-down" style="font-size:13px"></i>
                        </li>
                        <li class="nav-item nav-link text-light table-hover col">
                            @*@Html.ActionLink("GIÀY NỮ", "DanhMucPartial_TungLoai", "DanhMuc", new { @class = "all" })*@
                            GIỚI THIỆU
                        </li>
                        <li class="nav-item nav-link text-light table-hover col">
                            @*@Html.ActionLink("THÔNG TIN TÀI KHOẢN", "ac", "DanhMuc", new { @class = "all" })*@
                            TIN TỨC
                        </li>
                        <li class="nav-item nav-link text-light table-hover col">
                            @*@Html.ActionLink("THÔNG TIN TÀI KHOẢN", "ac", "DanhMuc", new { @class = "all" })*@
                            LIÊN HỆ
                        </li>
                    </ul>
                    <div class="col-3"></div>
                    <div class="col-md-4 my-auto" style="font-size:12px">
                        @using (Html.BeginForm("Search", "SanPham", FormMethod.Get))
                        {
                            @Html.TextBox("search", "", htmlAttributes: new { @class = "TextBoxTimKiem form-control ", @placeholder = "Nhập từ khóa cần tìm" })
                            <button class="btn bg-warning float-right" type="submit" style="margin-top: -38px; color: #fff; margin-left: 10px">Tìm kiếm</button>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid text-center" style="margin-top:5%;">
            <img src="~/images/logo.PNG" class="my-auto " width="150px" height="150px" alt="360boutique.vn" />
        </div>
        <div class="container-fluid text-center">
            <div class="row " style="background:#fff;left:0;">
                <div class="row" style="background-color:#fff;position:relative">
