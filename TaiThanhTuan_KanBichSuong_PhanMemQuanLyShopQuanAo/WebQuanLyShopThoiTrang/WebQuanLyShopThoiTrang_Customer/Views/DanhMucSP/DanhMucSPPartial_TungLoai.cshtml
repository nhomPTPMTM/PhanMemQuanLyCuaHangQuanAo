
@{
    ViewBag.Title = "DanhMucSPPartial_TungLoai";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<WebQuanLyShopThoiTrang_Customer.Models.LoaiSanPham>
<style>
    .sp {
        text-align: center;
        font-size: 20px;
        border-bottom: 1px solid black;
    }

    .xemct {
        padding-top: 20px;
        float: right;
        color: lightcoral;
        font-weight: bold;
    }
</style>
<ul class="list-group list-group-flush text-left table-hover" style="color:#000">
    @{
        foreach (var item in Model)
        {
            <li class="list-group-item">
                <div class="sp">
                    <h2 style="text-align:center"> @item.TenLoaiSanPham </h2>
                    <a class="xemct" href="@Url.Action("DanhMucSPTheoTen","DanhMucSP", new { @maLoaiSP = item.MaLoaiSanPham})">Xem chi tiết</a>
                </div>
                @Html.Action("SanPhamPartial_TheoDM", "SanPham", new { @maLSP = item.MaLoaiSanPham })
            </li>
        }
    }
</ul>

